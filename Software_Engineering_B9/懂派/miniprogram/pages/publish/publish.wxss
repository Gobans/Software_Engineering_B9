/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
 
}

.menubar{
  display: flex;
  flex-direction: row;
  line-height: 30px;

  border: 2px solid rgba(187, 187, 187, 100);
  margin-bottom: 10px;
}
.cancel{

}
.post{
  margin-left: auto;
}
.question-container{
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 50rpx;
  box-sizing: border-box;
  font-size: 14px;
  font-family: PingFangSC-regular;
  border: 1px solid rgba(187, 187, 187, 100);
}
.question-content {
  margin-bottom: 20rpx;
} 

.textArea{
  width:100%;
  border: 2px solid rgba(187, 187, 187, 100);
}

.uploadButton {
  width: 300rpx;
  text-align: center;
  margin: 20% auto 0 auto;
  height: 80rpx;
  color: white;
  border-radius: 5px;
  line-height: 80rpx;
  background-color: #07c160;
}

.button_clear {
  width: 300rpx;
  text-align: center;
  margin: 10px auto 0 auto;
  height: 80rpx;
  color: #07c160;
  border-radius: 5px;
  line-height: 80rpx;
  background-color: rgba(0, 0, 0, 0.03);
}

.code_box {
  text-align: center;
  background-color: white;
  margin-top: 30rpx;
  padding: 50rpx 0 17px 0;
}

.code_img {
  width: 300rpx;
  height: 300rpx;
}