/* pages/question_detail/question_detail.wxss */

page{
    background-color: rgb(248,248,248);
  }
  
  .question{
    width: 90%;
    height: 200rpx;
    margin-top: 30rpx;
    margin-left: 5%;
    margin-right: 5%;
    border: 4rpx solid #437dd4;
    border-radius: 10rpx;
    background-color: white;
    overflow:auto;
  }
  
  .question_title{
    height: 100%;
    width: 100%;
    color:black;
    font-size: 36rpx;
    font-weight: bold;
    display: flex;
    align-items: center;
    margin-left: 20rpx;
  }

  .answers{
    width: 90%;
    margin-top: 30rpx;
    margin-left: 5%;
    margin-right: 5%;
    border: 4rpx solid #437dd4;
    border-radius: 10rpx;
    background-color: white;
    overflow:auto;
  }

  .answer_nums{
    width: 100%;
    height: 80rpx;
    border-radius: 10rpx;
    background-color: white;
    font-size: 30rpx;
    font-weight: bold;
    display:flex;
    align-items:center;
    margin-left:20rpx;
  }

  .answer_contents{
    width: 100%;
    height: 300rpx;
    border-radius: 10rpx;
    margin-top: 20rpx;
    border-radius: 10rpx;
    background-color: white;
  }
  
  .userinfo{
    width: 100%;
    height: 25%;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    background-color: white;
  }

  .userinfo-avatar{
    height:70rpx;
    width: 70rpx;
    margin-left: 20rpx;
    border-radius: 50%;
  }

  .userinfo-nickname{
    height: 100%;
    width: 250rpx;
    color:black;
    font-size: 30rpx;
    font-weight: normal;
    display: flex;
    align-items: center;
    margin-left: 20rpx;
  }

  .answer_content{
    width: 100%;
    height: 50%;
    color:black;
    font-size: 32rpx;
    font-weight: normal;
    margin-left: 20rpx;
    margin-bottom: 10rpx;
  }

  .answer_status{
    height:20%;
    width: 100%;
    margin-left: 20rpx;
    display:flex;
    flex-direction: row;
    border-bottom: 1rpx solid #437dd4;
  }

  .like_cnt{
    height: 100%;
    width: 200rpx;
    color:black;
    font-size: 32rpx;
    font-weight: normal;
    display: flex;
    align-items: center;
  }
  
  .is_accept{
    height: 100%;
    width: 200rpx;
    color:black;
    font-size: 32rpx;
    font-weight: normal;
    display: flex;
    align-items: center;
    margin-left: 20rpx;
  }
  
  .del_button{
    height:100%;
    width: 200rpx;
    background-color: white;
    text-decoration: underline;
    font-size:30rpx;
  }
  .change_answer{
    height:100%;
    width: 200rpx;
    background-color: white;
    text-decoration: underline;
    font-size:30rpx;
  }

  .add_button{
    width: 90%;
    height: 100rpx;
    margin-top: 15rpx;
    margin-left: 5%;
    margin-right: 5%;
    border-radius: 10rpx;
    background-color: #EAF0FB;
  }

  .answer_form{
    width: 90%;
    height: 300rpx;
    margin-top: 30rpx;
    margin-left: 5%;
    margin-right: 5%;
    border: 4rpx solid #437dd4;
    border-radius: 10rpx;
    background-color: white;
    overflow:auto;
    display: flex;
    flex-direction: row;
  }
  .textArea{
   height: 50px; 
   padding: 10px;
  }
