.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
 
}

.menubar{
  display: flex;
  flex-direction: row;
  line-height: 30px;

  border: 2px solid rgba(187, 187, 187, 100);
  margin-bottom: 10px;
}
.answer-container{
  margin-top: 10px;
  display: flex;
  flex-direction: column;
  border: 1px solid rgba(187, 187, 187, 100);
}

.user-image {
  overflow: hidden;
  width: 36px;
  height: 38px;
  margin: 20rpx;
  border-radius: 50%;
  border: 1px solid rgba(187, 187, 187, 100);
}
.user-nickname{
  margin:20rpx;
}
