/* pages/search/search.wxss */

.area {
    width: 90%;
    margin-top: 30rpx;
    margin-left: 5%;
    margin-right: 5%;
    border: 4rpx solid #437dd4;
    border-radius: 10rpx;
    background-color: white;
}

.search_input {
    width: 80%;
    margin-left: 30rpx;
    height: 80rpx;
    font-size: 28rpx;
}

.search_img {
    height: 60rpx;
    width: 60rpx;
    margin-right: 30rpx;
}

.filter-txt{
    margin-left: 10%;
    height: 30rpx;
    margin-top: 10%;
    font-size: 26 rpx;
    color: rgb(80, 78, 78);
}

.filter{
    margin-top: 5%;
    margin-left: 10%;
    width: 80%;
    height: 10%;
    display:flex; 
    flex-direction: row;
}

.filter-type{
    width: 30%;
    font-size: 26 rpx;
    color: black;
}

.filter-input{
    margin-left: 10%;
    width: 25%;
    height: 100%;
    border: 3rpx solid black;
    border-radius: 6rpx;
    background-color: white;
}