<!--pages/answer/answer.wxml-->

<view class="question">
  <button style="width:100%; height:80%; margin:0rpx; padding:0rpx;" bindtap="getDetail"  hover-class="none">
    <view class="questioninfo">
      <view class="info-view">
        <view class="question-title">{{question}}</view>
        <view class="answer-abstruct">{{content}}</view>
      </view>
    </view>
  </button>
  <view class="question-info">
    <view class="ans-num">{{answers}}个回答</view>
    <view class="question-status">{{status}}采纳</view>
    <button class="bottom-click" size="mini" style="margin: 0rpx; padding:0rpx; font-size: 30rpx;" bindtap="deleteAnswer">删除回答</button>
  </view>
</view>
